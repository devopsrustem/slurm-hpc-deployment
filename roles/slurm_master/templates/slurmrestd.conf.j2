# Basic configuration
host={{ slurm_master_address | default('0.0.0.0') }}
port={{ slurm_slurmrestd_port | default(6820) }}

# Authentication
auth_type={{ slurm_restd_auth_type | default('jwt') }}

{% if slurm_enable_jwt_auth | default(false) %}
# JWT Authentication settings
jwt_key={{ slurm_restd_config_dir | default('/etc/slurm/restd') }}/jwt.key
{% endif %}

# SSL/TLS Configuration
{% if slurm_enable_rest_ssl | default(true) %}
ssl_cert={{ slurm_restd_ssl_dir | default('/etc/slurm/ssl') }}/slurmrestd.crt
ssl_key={{ slurm_restd_ssl_dir | default('/etc/slurm/ssl') }}/slurmrestd.key
{% endif %}

# Logging
log_level={{ slurm_restd_log_level | default('info') }}
log_file={{ slurm_restd_log_file | default('/var/log/slurmrestd/slurmrestd.log') }}

# Security
max_connections={{ slurm_restd_max_connections | default(100) }}
request_timeout={{ slurm_restd_request_timeout | default(30) }}

# API Version
api_version={{ slurm_restd_api_version | default('v0.0.41') }}